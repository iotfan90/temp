upstream app_server {
    # Optionally use unix domain sockets (need to set up gunicorn!)
    server unix:/var/run/mobovidata.sock fail_timeout=0;
    # server 127.0.0.1:8000 fail_timeout=0;
}

#server {
#    listen      80;
#    server_name %(DOMAIN)s;
#    location ~ /.well-known {
#            allow all;
#        }
#
#    return 301 https://$server_name$request_uri$request_uri;
#}

server {
    listen   80;
    server_name %(DOMAIN)s;
    server_tokens   off;
    return          301 https://%(DOMAIN)s$request_uri;
}

server {
    listen   443;
    server_name %(DOMAIN)s;
    server_tokens   off;

    client_max_body_size 4G;

    ssl on;
    ssl_certificate /etc/letsencrypt/live/%(DOMAIN)s/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/%(DOMAIN)s/privkey.pem;

    ssl_session_timeout 5m;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers "HIGH:!aNULL:!MD5 or HIGH:!aNULL:!MD5:!3DES";
    ssl_prefer_server_ciphers on;


    disable_symlinks off;

    location /static {
        alias /usr/local/lib/mobovidata/static ;
    }

    location /media {
        alias /var/www/mobovidata/media ;
    }

    location / {
        # checks for static file, if not found proxy to app
        try_files $uri @proxy_to_app;
    }

#        location /push {
#            proxy_pass http://push_server;
#            proxy_http_version 1.1;
#            proxy_set_header Upgrade $http_upgrade;
#            proxy_set_header Connection "upgrade";
#        }

    location @proxy_to_app {
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect off;


        proxy_pass   http://app_server;
    }

    error_page 404 /404.html;

    # redirect server error pages to the static page /50x.html
    #
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }

    location ~ /.well-known {
        allow all;
    }
}
